{# templates/movies/search.html.twig #}

{% extends 'base.html.twig' %}

{% block content %}
    <h2>Movie Search</h2>

    {{ form_start(form) }}
    {{ form_row(form.title) }}
    <button type="submit">Search</button>
    {{ form_end(form) }}

    {% if movies is not empty %}
        <h3>Search Results</h3>
        <ul>
            {% for movie in movies %}
                <li>{{ movie.title }}</li>
            {% endfor %}
        </ul>
    {% endif %}
{% endblock %}
